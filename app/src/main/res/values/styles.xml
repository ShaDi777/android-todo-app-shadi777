<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="large_title_text">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">38sp</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="title_text">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">32sp</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="button_text">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="body_text">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="subhead_text">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/label_tertiary</item>
        <item name="android:fontWeight">400</item>
    </style>


    <!-- Bottom sheet dialog style -->
    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="backgroundTint">@color/back_primary</item>
        <item name="bottomSheetStyle">@style/BottomSheetModelStyle</item>

    </style>

    <style name="BottomSheetModelStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">@color/back_primary</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <!-- Toggle Group style -->
    <style name="ToggleButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="colorContainer">@color/back_primary</item>
        <item name="colorOnContainer">@color/label_primary</item>

        <item name="strokeColor">@color/support_separator</item>

        <item name="android:textAppearance">@style/subhead_text</item>
    </style>


    <!-- Snackbar style -->
    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="android:layout_margin">24dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">@color/label_primary</item>
        <item name="colorOnSurface">@color/label_primary</item>
    </style>

</resources>