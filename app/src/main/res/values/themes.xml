<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back_primary</item>
        <item name="colorOnPrimary">@color/label_primary</item>
        <item name="android:textColorPrimary">@color/label_primary</item>
        
        <item name="colorPrimaryDark">@color/back_primary</item>
        <item name="android:navigationBarColor">@color/back_primary</item>
        <item name="android:windowLightStatusBar">true</item>



        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/back_secondary</item>
        <item name="colorOnSecondary">@color/label_secondary</item>

        <item name="colorOnTertiary">@color/label_tertiary</item>

        <item name="elevationOverlayColor">@color/back_elevated</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/color_blue</item>

    </style>
</resources>